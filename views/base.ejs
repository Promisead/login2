<%- include("header") -%>


    <div class="text-center center-div" id="login">
        <div class="container w-25 border py-5">
            <% if(locals.logout){ %> 
                <div class="alert alert-success text-center">
                    <%= logout %> 
                </div>
    
                <% } %> 
            <div class="title pb-5">
                <h2 class="font-weight-bold">Login Page</h2>
                <span>login for the existing user</span>
             
            </div>
            <form action="/route/login" method="POST" class="pt-3">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Enter your email address" name="email">
                    <small class="form-text text-muted text-left">Register User</small>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Enter your Password">
                </div><br>
                <button type="submit" class="btn btn-success rounded-pill">Login</button>
            </form>
            
       
        </div>
       
    </div>

    <%- include("footer") -%>